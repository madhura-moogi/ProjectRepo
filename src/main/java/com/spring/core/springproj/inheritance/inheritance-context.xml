<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:c="http://www.springframework.org/schema/c"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean class="com.spring.core.springproj.pojo.FoodItem" name="foodItem1">
<property name="name" value="Pizza"></property>
<property name="price" value="300"></property>
</bean>

<bean class="com.spring.core.springproj.pojo.Pizza" name="pizza1" parent="foodItem1">
	<property name="size" value="12"></property>
	<property name="toppings" value="Capsicum, mushroom and olives"></property>
</bean>
</beans>  